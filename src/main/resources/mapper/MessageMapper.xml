<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="message">
    <select id="selectAll" resultType="messageEntity">
        select * from message
    </select>

    <select id="selectOne" resultType="messageEntity" parameterType="messageEntity">
        select * from message
        where id = #{id}
    </select>

    <select id="getNextSequence" resultType="int">
        select message_seq.nextval from dual
    </select>

    <insert id="insert" parameterType="messageEntity">
        insert into message (id, author_id, content, send_date, channel_id,  topic_id)
        values (#{id}, #{authorId}, #{content}, #{sendDate}, #{channelId}, #{topicId})
    </insert>

    <update id="update" parameterType="messageEntity">
        update message
        set author_id = #{authorId}, content = #{content}, send_date = #{sendDate}, channel_id = #{channelId}, topic_id = #{topicId}
        where id = #{id}
    </update>

    <delete id="delete" parameterType="messageEntity">
        delete from message
        where id = #{id}
    </delete>
</mapper>