<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="channel">
    <select id="selectAll" resultType="channelEntity">
        select * from channel
    </select>

    <select id="selectOne" parameterType="channelEntity" resultType="channelEntity">
        select * from channel
        where id = #{id}
    </select>

    <select id="getNextSequence" resultType="int">
        select channel_seq.nextval from dual
    </select>

    <insert id="insert" parameterType="channelEntity">
        insert into channel (id, name, thumbnail)
        values (#{id}, #{name}, #{thumbnail})
    </insert>
    
    <update id="update" parameterType="channelEntity">
        update channel
        set name = #{name}, thumbnail = #{thumbnail}
        where id = #{id}
    </update>

    <delete id="delete" parameterType="channelEntity">
        delete from channel
        where id = #{id}
    </delete>
</mapper>